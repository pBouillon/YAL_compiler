programme imc debut

    // variables
    entier imc ;
    entier masse ;
    entier taille ;

    // corps
    ecrire "Votre taille en cm: " ;
    lire taille ;

    ecrire "Votre masse corporelle en kg: " ;
    lire masse ;

    // calcul de l'IMC
    imc = taille * taille ;
    imc = masse / imc ;
    ecrire imc ;

    // affichage du resultat
    si imc < 18 alors
        ecrire "insuffisance ponderale (maigreur)\n" ;
        imc = 50 ;
    sinon
        si imc < 25 alors
            ecrire "poids normal\n" ;
            imc = 50 ;
        sinon
            si imc < 30 alors
                ecrire "surpoids\n" ;
                imc = 50 ;
            sinon
                ecrire "obesite\n" ;
            fsi
        fsi
    fsi
fin