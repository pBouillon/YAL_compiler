programme imc debut

    // variables
    entier imc ;
    entier masse ;
    entier taille ;

    // corps
    ecrire "Votre taille en cm: " ;
    lire taille ;
    ecrire "\n" ;

    ecrire "Votre masse corporelle en kg: " ;
    lire masse ;
    ecrire "\n" ;

    // calcul de l'IMC
    imc = taille * taille ;
    imc = poids / imc ;

    // affichage du resultat
    si imc < 18 alors
        ecrire "insuffisance pondérale (maigreur)\n" ;
        imc = 50 ;
    finsi

    si imc < 25 alors
        ecrire "poids normal\n" ;
        imc = 50 ;
    finsi

    si imc < 30 alors
        ecrire "surpoids\n" ;
        imc = 50 ;
    sinon
        ecrire "obésité\n" ;
    finsi

fin