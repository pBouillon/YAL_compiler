/* ------------Declaration of Terminals and Non Terminals Section----------- */
   
/* Terminals (tokens returned by the scanner).  */

terminal Symbol    PLUS, MOINS, MULT, DIV, PAROUV, PARFER, POINTVIRGULE ;
terminal Symbol    SUP, INF, EGALEGAL, DIFF, ET, OU, NON, EGAL ;
terminal String    IDF ;
terminal String    CONSTANTEINT, CONSTANTEBOOL , CONSTANTECHAINE, CONSTANTEIDF ;

terminal String    ENTIER, ECRIRE ;

/* Non terminals used in the grammar section.  */

non terminal ArbreAbstrait PROG ;
non terminal Instruction INSTR ;
non terminal Expression EXPR, CSTE ;
non terminal Expression DECLARATION, DECL_VAR, AFFECT, PRINT;

precedence left OU ;
precedence left ET ;
precedence left EGALEGAL, DIFF;
precedence left INF, SUP ;
precedence left PLUS, MOINS;
precedence left MULT, DIV ;
precedence left NON ;

/* ----------------------------Grammar Section-------------------- */
 
start with PROG ;

PROG    ::=     INSTR:e POINTVIRGULE
                {:  BlocDInstructions yal.arbre = new BlocDInstructions(eleft+1) ;
                	yal.arbre.ajouter(e) ;
                	RESULT = yal.arbre ; :}
        |
        		PROG:p INSTR POINTVIRGULE
                {: 	yal.arbre.ajouter(e) ;
                	RESULT = yal.arbre ; :}
                ;

DECLARATION ::= DECL_VAR
				;
				
DECL_VAR ::= 	ENTIER IDF:i POINTVIRGULE
				{:  TDS.getInstance().ajouter(new Entree(i), new Symbole()); :}
 				;
 				
AFFECT ::= 		IDF:i EGAL EXPR:e
				{:  RESULT = new Affectation(i,e);  :}
				;
				    
EXPR    ::=     EXPR:g  PLUS  EXPR:d
                {: RESULT = new Plus(g, d) ; :}
        | 
                EXPR:g  MOINS  EXPR:d
                {: RESULT = new Moins(g, d); :}
        |                
                EXPR:g  MULT  EXPR:d
                {: RESULT = new Mult(g, d); :}
        |                
                EXPR:g  DIV  EXPR:d
                {: RESULT = new Div(g, d); :}
        |       
                EXPR:g  INF  EXPR:d
                {: RESULT = new Inferieur(g, d); :}
        |       
                EXPR:g  SUP  EXPR:d
                {: RESULT = new Superieur(g, d); :}
        |              
                EXPR:g  EGALEGAL  EXPR:d
                {: RESULT = new Egal(g, d); :}
        |       
                EXPR:g  DIFF  EXPR:d
                {: RESULT = new Different(g, d); :}
        |                      
                MOINS  EXPR:e  
                {: RESULT = new MoinsUnaire(e); :}
        |      
                EXPR:g  ET  EXPR:d
                {: RESULT = new EtLogique(g, d); :}
        |      
                EXPR:g  OU  EXPR:d
                {: RESULT = new OuLogique(g, d); :}
        |      
                NON EXPR:e
                {: RESULT = new NonLogique(e); :}
        |
                CSTE:c
                {: RESULT = c ; :}
        |
                PAROUV  EXPR:e  PARFER
                {: RESULT = e ; :}
				;
				
INSTR ::=       PRINT:p
                {: RESULT = p; :}
        |
                AFFECT:a
                {: RESULT = a ; :}
        |
                DECLARATION:d
                {: RESULT = d ; :}
        |
                EXPR:i
                {: RESULT = i ; :}
                ;


PRINT ::=      ECRIRE EXPR:e
                {:  new EcrireExpr(e,eleft+1) ; :}
        |
               ECRIRE CONSTANTECHAINE:c
               {: RESULT = new EcrireChaine(eleft+1,c) ; :}
               ;


CSTE    ::=     CONSTANTEINT:e 
                {: RESULT = new ConstanteEntiere(e, eleft+1) ; :}
        |       CONSTANTEBOOL:e 
                {: RESULT = new ConstanteBool(e, eleft+1) ; :}
                ;